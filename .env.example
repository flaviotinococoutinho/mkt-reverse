# =============================================================================
# MARKETPLACE REVERSO - ENVIRONMENT CONFIGURATION
# =============================================================================

# Application Environment
SPRING_PROFILES_ACTIVE=dev
APP_NAME=marketplace-reverso
APP_VERSION=1.0.0-SNAPSHOT

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Main Database (PostgreSQL)
DB_MAIN_HOST=localhost
DB_MAIN_PORT=5432
DB_MAIN_NAME=marketplace_main
DB_MAIN_USERNAME=marketplace_user
DB_MAIN_PASSWORD=marketplace_pass

# Events Database (PostgreSQL)
DB_EVENTS_HOST=localhost
DB_EVENTS_PORT=5433
DB_EVENTS_NAME=marketplace_events
DB_EVENTS_USERNAME=events_user
DB_EVENTS_PASSWORD=events_pass

# Database Pool Configuration
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_POOL_TIMEOUT=30000

# =============================================================================
# CACHE CONFIGURATION (REDIS)
# =============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_TIMEOUT=2000
REDIS_POOL_MAX_ACTIVE=20
REDIS_POOL_MAX_IDLE=10
REDIS_POOL_MIN_IDLE=5

# =============================================================================
# MESSAGE BROKER (KAFKA)
# =============================================================================

KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=marketplace-group
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=true
KAFKA_SESSION_TIMEOUT=30000
KAFKA_MAX_POLL_RECORDS=500

# Kafka Topics
KAFKA_TOPIC_USER_EVENTS=user.events
KAFKA_TOPIC_SOURCING_EVENTS=sourcing.events
KAFKA_TOPIC_SUPPLIER_EVENTS=supplier.events
KAFKA_TOPIC_AUCTION_EVENTS=auction.events
KAFKA_TOPIC_CONTRACT_EVENTS=contract.events
KAFKA_TOPIC_NOTIFICATION_EVENTS=notification.events

# =============================================================================
# SEARCH ENGINE (ELASTICSEARCH)
# =============================================================================

ELASTICSEARCH_HOSTS=localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_CONNECTION_TIMEOUT=5000
ELASTICSEARCH_SOCKET_TIMEOUT=60000

# =============================================================================
# OBJECT STORAGE (MINIO - S3 COMPATIBLE)
# =============================================================================

MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=marketplace-files
MINIO_REGION=us-east-1

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-256-bits
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000
JWT_ISSUER=marketplace-reverso

# OAuth2 Configuration
OAUTH2_GOOGLE_CLIENT_ID=your-google-client-id
OAUTH2_GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH2_FACEBOOK_CLIENT_ID=your-facebook-client-id
OAUTH2_FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# Encryption
ENCRYPTION_KEY=your-encryption-key-32-characters
ENCRYPTION_ALGORITHM=AES/GCM/NoPadding

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Configuration (Development - MailHog)
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_PROTOCOL=smtp
MAIL_TLS_ENABLE=false
MAIL_SSL_ENABLE=false
MAIL_DEBUG=true

# Email Templates
MAIL_FROM=noreply@marketplace-reverso.com
MAIL_FROM_NAME=Marketplace Reverso

# Production Email (SendGrid/AWS SES)
# MAIL_HOST=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your-sendgrid-api-key
# MAIL_TLS_ENABLE=true

# =============================================================================
# OBSERVABILITY & MONITORING
# =============================================================================

# Metrics
METRICS_ENABLED=true
METRICS_EXPORT_PROMETHEUS=true
METRICS_EXPORT_INTERVAL=60s

# Tracing (Jaeger)
TRACING_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_SERVICE_NAME=marketplace-reverso
JAEGER_SAMPLER_TYPE=const
JAEGER_SAMPLER_PARAM=1

# Logging
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_MARKETPLACE=DEBUG
LOG_LEVEL_SPRING=INFO
LOG_LEVEL_HIBERNATE=WARN
LOG_LEVEL_KAFKA=INFO

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Payment Gateway (Stripe)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Blockchain (Ethereum/Polygon)
BLOCKCHAIN_NETWORK=polygon-mumbai
BLOCKCHAIN_RPC_URL=https://rpc-mumbai.maticvigil.com
BLOCKCHAIN_PRIVATE_KEY=your-private-key
BLOCKCHAIN_CONTRACT_ADDRESS=0x...

# ERP Integration
ERP_TYPE=sap
ERP_ENDPOINT=https://your-erp-system.com/api
ERP_USERNAME=erp_user
ERP_PASSWORD=erp_password
ERP_CLIENT_ID=your_client_id
ERP_CLIENT_SECRET=your_client_secret

# =============================================================================
# API RATE LIMITING
# =============================================================================

RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_CAPACITY=200

# =============================================================================
# FEATURE FLAGS
# =============================================================================

FEATURE_BLOCKCHAIN_ENABLED=true
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_ERP_INTEGRATION=false
FEATURE_MOBILE_APP=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug
DEBUG_ENABLED=true
DEBUG_SQL_LOGGING=false
DEBUG_KAFKA_LOGGING=false

# Hot Reload
SPRING_DEVTOOLS_RESTART_ENABLED=true
SPRING_DEVTOOLS_LIVERELOAD_ENABLED=true

# Test Data
LOAD_TEST_DATA=true
TEST_DATA_USERS=100
TEST_DATA_SUPPLIERS=50
TEST_DATA_SOURCING_EVENTS=20

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# Security (Production Only)
# SECURITY_REQUIRE_SSL=true
# SECURITY_HSTS_ENABLED=true
# SECURITY_CONTENT_SECURITY_POLICY=default-src 'self'

# Performance (Production Only)
# JVM_OPTS=-Xms2g -Xmx4g -XX:+UseG1GC
# HIKARI_POOL_SIZE=50
# REDIS_POOL_MAX_ACTIVE=100

# Monitoring (Production Only)
